    "version": "0.2.0",
    "configurations": [

        {
            "name": "Frontend",
            "type": "debugpy",
            "request": "launch",
            "program": "./run_frontend.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/environment_and_configuration/dev_environment_frontend.env"
        },
        {
            "name": "Backend",
            "type": "debugpy",
            "request": "launch",
            "program": "./run_backend.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/environment_and_configuration/dev_environment_backend.env"
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/environment_and_configuration/dev_environment_backend.env"
        }
    ]
}